{% extends 'base.html.twig' %}

{% block body %}
  
   
    <div class="row">
        <div class="col-xs-7">
            <h2 class="card-title text-uppercase">{{ sagardotegi.nombre }}</h2>
            <p class="card-description">{{ sagardotegi.descripcion }}</p>
        </div>
        <div class="col-xs-5">
            <div class="card">
                <a class="card-link"name="{{ sagardotegi.nombre }}" href="{{ path("sagardotegi_view", {idSagardotegi:sagardotegi.id}) }}">
                <div class="card-direction text-uppercase text-center"><h4>{{ sagardotegi.direccion }}</h4></div>
                <img class="card-image img-responsive" src="/web/{{ sagardotegi.foto }}"></img>
                
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-offset-1 col-xs-11">
    {% for kupela in kupelas %}
        
      
        <div class="row">
            <div class="col-xs-6">
              <div class="caption">
                <h3>{{kupela.nombre}}</h3>
                <p>{{kupela.descripcion}}</p>
                </div>
                </div>
            <div class="col-xs-4">
                <img class="img-responsive" src="/web/{{ sagardotegi.foto }}"></img>
            </div>
            <div class="col-xs-2">
                <h1>{{kupela.numVotos}}</h1>
                <img class="like" src= "../../../../../web/img/logo_transp.png">
            </div>
        </div>
      
    {% endfor %}
        </div>
    </div>
{% endblock %}