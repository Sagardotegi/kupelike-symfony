{% extends 'base.html.twig' %}

{% block body %}
  <div class="container content">
   
    <div class="row single-sagardotegi">
        <div class="col-xs-6">
            <h2 class="card-title text-uppercase">{{ sagardotegi.nombre }}</h2>
                <p class="single-description" id="descripcion">{{ sagardotegi.descripcion }}</p>
                <a href="{{ path("sagardotegi_mapa", {idSagardotegi:sagardotegi.id}) }}"><button type="button" class="btn btn-default">Como llegar</button></a>
                <a href="http://www.petritegi.com/es/contacto"><button type="button" class="btn btn-default">Contacto</button></a>
        </div>
        <div class="col-xs-6">
            <div class="card-direction text-uppercase text-center"><h4>{{ sagardotegi.direccion }}</h4></div>
            <img class="single-img img-responsive" src="{{asset(sagardotegi.foto)}}"></img>
        </div>
    </div>
        
    <div class="row p-x-1 kupela-list">
        <div class="col-xs-offset-1 col-xs-10">
    {% for kupela in kupelas %}
        
      
        <div class="row left-line">
            <div class="col-xs-6">
                <div class="caption">
                    <h3 class="card-title text-uppercase">{{kupela.nombre}}</h3>
                    <p class="single-description">{{kupela.descripcion}}</p>
                </div>
            </div>
            <div class="col-xs-4">
                <img src="{{asset(kupela.foto)}}" alt="kupela" class="img-circle img-responsive">
            </div>
            <div class="col-xs-1 votos">
                <h1>{{kupela.numVotos}}</h1>
                <img class="like-kupela img-responsive" src= "/web/img/logo_transp.png">
            </div>
        </div>
      
    {% endfor %}
        </div>
    </div>
{% endblock %} 