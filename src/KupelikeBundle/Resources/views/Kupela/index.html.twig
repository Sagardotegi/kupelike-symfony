              <img src= "{{asset("/uploads/kupelas/like.png")}}">
              <div class="caption">
                <h3>{{kupela.nombre}}</h3>
                <p>{{kupela.descripcion}}</p>
                    <p><a href="{{path("sagardotegis_index")}}" class="btn btn-primary" role="button">Todas las Sidrerias</a></p>
              </div>
            </div>
          </div>
  
    {% endfor %}
    </div>
{% endblock %}
