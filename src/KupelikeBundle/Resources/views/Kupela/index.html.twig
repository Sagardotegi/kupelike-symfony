{% extends 'base.html.twig' %}

{% block body %}
  
   
    <div class="row kupela">
      <div class="col-sm-12">
            <h1 class="mtitle title-padding text-center">{{sagardotegi.nombre}}</h1>
       </div>
    {% for kupela in kupelas %}
       
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <img src="{{asset(kupela.foto)}}" alt="kupela">
