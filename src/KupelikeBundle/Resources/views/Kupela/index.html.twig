{% extends 'base.html.twig' %}

{% block body %}

    <h1>{{ sagardotegi.nombre }}</h1>
    <h3>Kupelas de la sagardotegi</h3>
    {% for kupela in kupelas %}
        <h5>{{ kupela.nombre }}</h5>
        
        
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <img src="{{asset(kupela.foto)}}" alt="kupela">
              <h1>{{kupela.numVotos}}</h1>
              <img src= "{{asset("/uploads/kupelas/like.png")}}">
              <div class="caption">
                <h3>{{kupela.nombre}}</h3>
                <p>{{kupela.descripcion}}</p>
                    <p><a href="{{path("sagardotegis_index")}}" class="btn btn-primary" role="button">Todas las Sidrerias</a></p>
              </div>
            </div>
          </div>
        </div>
        
    {% endfor %}

{% endblock %}
