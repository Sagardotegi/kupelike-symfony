{% extends 'base.html.twig' %}

{% block body %}
 
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
                <div class="row">
                
                    {% if error %}
                    <div class="col-xs-12">
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                    {% endif %}
                    
                    <div class="col-xs-12">
                    <h1 class="mtitle text-center">{{ 'titulos.login' | trans }}</h1>
                    </div>
                    
                    <div class="col-xs-12">
                        <div class="row">
                        <form action="{{ path('login_check') }}" method="post">
                            <div class="form-group col-xs-12">
                                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'paginas.login.usuario' | trans }}" class="form-control" />
                            </div>
                        
                            <div class="form-group col-xs-12">
                                <input type="password" id="password" name="_password" placeholder="{{ 'paginas.login.contrasena' | trans }}" class="form-control" />
                            </div>
                        
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-primary pull-right">{{ 'boton.acceder' | trans }}</button>
                            </div>
                        </form>
                        <div class="col-xs-12">
                            <p class="text-right">{{ 'paginas.login.cuenta' | trans }}</p>
                            <p class="text-right"><a href="{{path("registrar_form")}}">{{ 'paginas.login.solicitar' | trans }}</a></p>
                        </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    

{% endblock %}