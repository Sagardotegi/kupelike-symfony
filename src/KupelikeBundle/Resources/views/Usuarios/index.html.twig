{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    
    <div class="row-nuevakupela" style="margin-top:50px;">
        
        {% for flashMessage in app.session.flashbag.get('mensaje') %}
        	<div class="alert alert-success" role="alert">
        		<div class="container"> {{ flashMessage }} </div>
        	</div>
        {% endfor %}
        
        <a href="{{ path('nuevo_usuario') }}" title="Crear un nuevo usuario" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span></a>
        
        <div class="table-responsive">
            <table id="usuarios" class="table table-hover">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Sidrería</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Acciones</th>
                </tr>
                {% for usuario in usuarios %}
                <tr>
                        <td>{{ usuario.id }}</td>
                        <td>{{ usuario.nombre }} {{ usuario.apellidos }}</td>
                        <td>{{ usuario.nombreSidreria }}</td>
                        <td>{{ usuario.email }}</td>
                        <td>{{ usuario.telefono }}</td>
                        <td><a href="{{ path('editar_usuario', { id: usuario.id }) }}" class="btn btn-default">Editar</a></td>
                        <td><a href="{{ path('eliminar_usuario', { id: usuario.id }) }}" class="btn btn-default" onclick="seguro();">Eliminar</a></td>
                </tr>
                {% endfor %}
            </table>
        </div>
    
    
    

{% endblock %}